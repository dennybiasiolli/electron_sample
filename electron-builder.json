{
  "appId": "yourappid",
  "files": [
    "www/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "publish": [
    {
      "provider": "generic",
      "url": "http://127.0.0.1:8080/"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "icons/icon.icns"
  },
  "dmg": {
    "icon": "icons/icon.icns",
    "iconSize": 128,
    "contents": [
      {
        "x": 130,
        "y": 210
      },
      {
        "x": 410,
        "y": 210,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "category": "Utility",
    "target": [
      "AppImage",
      "deb"
    ]
  },
  "win": {
    "target": "nsis",
    "icon": "icons/icon.ico"
  }
}
